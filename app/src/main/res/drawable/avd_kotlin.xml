<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="125dp"
            android:height="125dp"
            android:viewportWidth="125"
            android:viewportHeight="125">
            <group
                android:name="group"
                android:pivotX="62"
                android:pivotY="62">
                <path
                    android:name="path"
                    android:pathData="M 62.76 0 L 0 66 L 0 125 L 62.67 62.22 L 125 0 L 62.76 0 Z"
                    android:fillColor="#ff8900"
                    android:strokeColor="#ff8900"/>
                <path
                    android:name="path_1"
                    android:pathData="M 0 125 L 62.67 62.22 L 125 125 L 0 125 Z"
                    android:fillColor="#945dff"/>
                <path
                    android:name="path_2"
                    android:pathData="M 0 0 L 62.76 0 L 0 66 L 0 0 Z"
                    android:fillColor="#00afff"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:startOffset="300"
                    android:duration="400"
                    android:valueFrom="0.5"
                    android:valueTo="0.9"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:startOffset="300"
                    android:duration="400"
                    android:valueFrom="0.5"
                    android:valueTo="0.9"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
